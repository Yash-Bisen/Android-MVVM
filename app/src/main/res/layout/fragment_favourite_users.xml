    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:background="#08718D"
        android:minHeight="?attr/actionBarSize"
        app:navigationIcon="@drawable/ic_back_arrow"
        app:title="@string/list_of_favourite_users"
        app:titleTextColor="@android:color/white"
        android:textStyle="bold"
        android:textAlignment="textStart"/>
    <ImageView
        android:id="@+id/dropDownMenuAppBAr"
        android:layout_width="27dp"
        android:layout_height="32dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="5dp"
        android:maxWidth="15dp"
        android:maxHeight="15dp"
        android:src="@drawable/dots" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewFavroiteUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="10dp" />

    <TextView
        android:id="@+id/NoUsers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="342dp"
        android:layout_marginEnd="0dp"
        android:padding="10dp"
        android:text="@string/no_favourite_user_found"
        android:textAlignment="center"
        android:textColor="#08718D"
        android:textSize="22sp"
        android:textStyle="bold"
        android:visibility="visible" />

    <com.taskeasy.design.CarouselLayout
        android:id="@+id/carouselLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="155dp"
        android:paddingVertical="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</RelativeLayout>